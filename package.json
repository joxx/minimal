{
  "name": "minimal",
  "description": "##To install with NPM:",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist .cache",
    "style": "postcss src/css/style.tailwind.css --output src/css/style.css",
    "watch:dev": "onchange 'src' -e 'src/css/style.css' -- npm run style",
    "parcel:build": "parcel build src/index.html --public-url ./",
    "parcel:serve": "parcel src/index.html --open",
    "prod": "npm-run-all -s clean style parcel:build",
    "watch": "npm-run-all -s clean -p watch:dev parcel:serve"
  },
  "staticFiles": {
    "staticPath": "src/static",
    "watcherGlob": "**"
  },  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joxx/minimal.git"
  },
  "keywords": [
    "tailwind",
    "parcel",
    "boilerplate"
  ],
  "author": "Joachim Kliemann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joxx/minimal/issues"
  },
  "homepage": "https://github.com/joxx/minimal#readme",
  "dependencies": {
    "autoprefixer": "^9.7.6",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.7.3"
  },
  "devDependencies": {
    "onchange": "^7.0.2"
  }
}
